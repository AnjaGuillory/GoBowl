<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gobowl.seclass.gatech.edu.gobowl">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="edu.gatech.seclass.gobowl.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.gatech.seclass.gobowl.ManagerMenu" />
        <activity android:name="edu.gatech.seclass.gobowl.CustomerMenu" />
        <activity android:name="edu.gatech.seclass.gobowl.CustomerLogin" />

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <activity android:name="edu.gatech.seclass.gobowl.ManagerNewCustomer" />
        <activity android:name="edu.gatech.seclass.gobowl.CustomerNumBowlers" />
        <activity android:name="edu.gatech.seclass.gobowl.CustomerLaneDisplay" />
        <activity android:name="edu.gatech.seclass.gobowl.CheckOut" />
        <activity android:name="edu.gatech.seclass.gobowl.ScanCreditCard" />
        <activity android:name="edu.gatech.seclass.gobowl.ManagerFindCustomer"></activity>
    </application>

</manifest>