<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gobowl.seclass.gatech.edu.gobowl">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManagerMenu" />
        <activity android:name=".CustomerMenu" />
        <activity android:name=".CustomerLogin" />

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <activity android:name=".ManagerNewCustomer" />
        <activity android:name=".CustomerNumBowlers" />
        <activity android:name=".CustomerLaneDisplay" />
        <activity android:name=".CheckOut" />
        <activity android:name=".ScanCreditCard"></activity>
    </application>

</manifest>